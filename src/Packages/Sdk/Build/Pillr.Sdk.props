<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <PillrProjectArchive>$(ProjectDir).pillr</PillrProjectArchive>
    <PillrProjectDir>$(ProjectDir)Pillr</PillrProjectDir>
    <PillrUserArchive>$(USERPROFILE)\.pillruser</PillrUserArchive>
    <PillrUserDir>$(USERPROFILE)\Pillr</PillrUserDir>
  </PropertyGroup>

  <PropertyGroup>
<!-- <Pillr.TaskDirectory>$(MSBuildThisFileDirectory)..\tasks</Pillr.TaskDirectory> -->
    <PillrTaskDirectory>$(MSBuildThisFileDirectory)..\bin\Debug\net8.0</PillrTaskDirectory>
    <PillrTaskAssembly>$(PillrTaskDirectory)\$(MSBuildThisFileName).dll</PillrTaskAssembly>
    <PillrTaskNamespace>USSoftworks.Pillr</PillrTaskNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <AuthorName>Ken Garrett</AuthorName>
    <AuthorEmail>ken.garrett@ussoftworks.com</AuthorEmail>
    <ServiceBinPath>$(ProjectDir)..\Pillr.Service\bin\Debug\net8.0\Pillr.Service.exe</ServiceBinPath>
    <PillrDbFileName>Pillr.db</PillrDbFileName>

    <SLACK_APIKEY>@(Configuration->Metadata('SLACK_APIKEY'))</SLACK_APIKEY>
    <SlackChannel>#pillrdotnet</SlackChannel>
    <GITHUB_APIKEY>@(Configuration->Metadata('GITHUB_APIKEY'))</GITHUB_APIKEY>
  </PropertyGroup>

</Project>
